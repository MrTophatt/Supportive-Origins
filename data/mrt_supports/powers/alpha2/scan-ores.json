{
    "type": "origins:multiple",
    "name": "Seismic Ping",
    "description": "Activate a radar that shows the location of ores around you.",
    "badges": [
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/star.png",
            "text": "Scanning for ores uses 25% of your total energy"
        },
        {
            "type": "origins:keybind",
            "sprite": "origins:textures/gui/badge/active.png",
            "text": "Scan using %s"
        }
    ],
	
    "ore-glow":{
		"type": "origins:active_self",
        "entity_action": {
			"type": "origins:and",
            "actions": [
                {
                    "type": "origins:change_resource",
                    "resource": "mrt_supports:alpha2/battery_resource",
                    "change": -25
                },
			    {
				    "type": "origins:area_of_effect",
                    "radius": 16,
                    "shape": "sphere",
                    "bientity_action": {
                        "type": "origins:target_action",
                        "action": {
                            "type": "origins:apply_effect",
                            "effect": {
                                "effect": "minecraft:glowing",
                                "duration": 300,
                                "amplifier": 0
                            }
                        }
                    }
                },
                {
				    "type": "origins:block_action_at",
                    "block_action": {
                        "type": "origins:area_of_effect",
                        "radius": 16,
                        "shape": "sphere",
                        "block_action": {
							"type": "origins:execute_command",
                            "command": "function mrt_supports:alpha2/ore-highlight"
						},
						"block_condition":{
                            "type": "origins:in_tag",
                            "tag": "mrt_supports:ores"
                        }
                    }
                }
			]
		},
		"key": {
            "key":"key.saveToolbarActivator"
        },
        "cooldown": 1200,
        "hud_render": {
            "sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_02.png",
            "bar_index": 3
        },
        "condition": {
            "type": "origins:resource",
            "resource": "mrt_supports:alpha2/battery_resource",
            "comparison": ">=",
            "compare_to": 25
        }
	},
	
	"block-break":{
        "type": "origins:action_on_block_break",
        "block_action": {
            "type": "origins:execute_command",
            "command": "execute as @e[type=minecraft:armor_stand,tag=shown,distance=..1] at @s run kill @e[type=minecraft:block_display,tag=shown,distance=..1]"
        },
        "block_condition": {
            "type": "origins:in_tag",
            "tag": "mrt_supports:ores"
        },
        "only_when_harvested": false
    }
}